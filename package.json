{
  "name": "nbbcjs",
  "version": "1.1.0",
  "description": "NodeJS Implementation of the PHP NBBC BBCode Parser, a fast extensible BBCode parser",
  "main": "build/src/nbbc.js",
  "types": "build/src/nbbc.d.ts",
  "scripts": {
    "test": "jest",
    "coverage": "jest --collectCoverage --",
    "prepublish": "pnpm run build",
    "build": "npx tsc && npx webpack",
    "builddocs": "npx typedoc ./src/nbbc.ts --plugin typedoc-plugin-missing-exports --internalModule Types"
  },
  "keywords": [
    "bbcode",
    "nbbc",
    "extensible",
    "fast",
    "library",
    "front-end",
    "back-end",
    "emoji",
    "formatting",
    "html"
  ],
  "engines": {
    "node": ">=16"
  },
  "author": "Jaynator495",
  "contributors": [
